<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/night_sky_add_city"
    tools:context=".ui.city.AddCityFragment">

    <EditText
        android:id="@+id/addCityEditText"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="312dp"
        android:backgroundTint="@color/white"
        android:imeOptions="actionDone"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/add_city_textview"
        android:textColor="@color/white"
        android:textSize="@dimen/add_city_size_textview"
        app:layout_constraintBottom_toTopOf="@+id/addCityEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addCityButton"

        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/ic_ok"
        app:layout_constraintBottom_toBottomOf="@+id/addCityEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintStart_toEndOf="@+id/addCityEditText"
        app:layout_constraintTop_toTopOf="@+id/addCityEditText"
        />

</androidx.constraintlayout.widget.ConstraintLayout>